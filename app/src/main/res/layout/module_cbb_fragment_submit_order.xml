<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/module_cbb_submit_top_fl"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/module_cbb_submit_order_back_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/module_cbb_all_back_bg_w_wihte" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="确认订单"
                android:textColor="@color/deepTextPrimary"
                android:textSize="18sp" />

        </RelativeLayout>
    </FrameLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/module_cbb_submit_top_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/assistPrimary"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/module_cbb_submit_order_address_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cbb_dp_10"
            android:layout_marginEnd="@dimen/cbb_dp_15"
            android:layout_marginStart="@dimen/cbb_dp_15"
            android:layout_marginTop="@dimen/cbb_dp_10"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="13dp"
                android:src="@drawable/module_cbb_all_location_icon" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/module_cbb_submit_order_have_address_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/module_cbb_submit_order_name_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:maxWidth="53dp"
                            android:textColor="@color/deepTextPrimary"
                            android:textSize="@dimen/cbb_sp_14" />

                        <TextView
                            android:id="@+id/module_cbb_submit_order_phone_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:textColor="@color/deepTextPrimary"
                            android:textSize="@dimen/cbb_sp_14" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/module_cbb_submit_order_address_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/shallowTextPrimary"
                        android:textSize="@dimen/cbb_sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/module_cbb_submit_order_no_have_address_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="30dp"
                        android:text="添加收货地址"
                        android:textColor="@color/shallowTextPrimary"
                        android:textSize="@dimen/cbb_sp_16" />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="19dp"
                android:src="@drawable/module_cbb_all_arrow_right_icon" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_marginStart="@dimen/cbb_dp_15"
            android:layout_marginEnd="@dimen/cbb_dp_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/module_cbb_submit_goods_img"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="11dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="68dp"
                    android:layout_height="68dp" />
                <LinearLayout
                    android:layout_marginEnd="@dimen/cbb_dp_15"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/module_cbb_submit_goods_title_img"
                        android:layout_marginTop="13dp"
                        android:textColor="@color/deepTextPrimary"
                        android:textSize="@dimen/cbb_sp_14"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/module_cbb_submit_goods_content_tx"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/cbb_sp_12"
                        android:textColor="@color/shallowTextPrimary"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginStart="@dimen/cbb_dp_10"
                android:layout_marginEnd="@dimen/cbb_dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cbb_dp_0.5"
                android:background="@color/linePrimary"/>
            <TextView
                android:id="@+id/module_cbb_submit_goods_price_tx"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:textSize="@dimen/cbb_sp_16"
                android:textColor="@color/deepTextPrimary"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="@dimen/cbb_dp_15"
            android:layout_marginEnd="@dimen/cbb_dp_15"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="购买数量"
                android:layout_marginTop="24dp"
                android:textColor="@color/deepTextPrimary"
                android:textSize="@dimen/cbb_sp_14"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/module_cbb_submit_goods_remove_number_img"
                android:src="@drawable/module_cbb_submit_order_remove_icon"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:layout_gravity="center_vertical"
                android:layout_width="23dp"
                android:layout_height="23dp" />
            <TextView
                android:id="@+id/module_cbb_submit_goods_number_tx"
                android:layout_marginStart="@dimen/cbb_dp_15"
                android:layout_marginEnd="@dimen/cbb_dp_15"
                android:textSize="@dimen/cbb_sp_16"
                android:textColor="@color/deepTextPrimary"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/module_cbb_submit_goods_add_number_img"
                android:src="@drawable/module_cbb_submit_order_add_icon"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:layout_gravity="center_vertical"
                android:layout_width="23dp"
                android:layout_height="23dp" />

        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_marginStart="@dimen/cbb_dp_15"
            android:layout_marginEnd="@dimen/cbb_dp_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="10dp"
                    android:textColor="@color/deepTextPrimary"
                    android:textSize="@dimen/cbb_sp_14"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:text="总价"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/module_cbb_submit_goods_pay_money_tx"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/cbb_sp_14"
                    android:textColor="@color/Primary"
                    android:layout_marginEnd="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/cbb_dp_0.5"
                android:background="@color/linePrimary"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="10dp"
                    android:textColor="@color/deepTextPrimary"
                    android:textSize="@dimen/cbb_sp_14"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:text="运费"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/module_cbb_submit_goods_postage_tx"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/cbb_sp_14"
                    android:textColor="@color/Primary"
                    android:layout_marginEnd="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
        </RelativeLayout>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/module_cbb_submit_order_submit_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="57dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/module_cbb_df1f01_6_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:text="立即下单"
            android:textColor="@color/white"
            android:textSize="@dimen/cbb_sp_16" />
    </RelativeLayout>

</RelativeLayout>