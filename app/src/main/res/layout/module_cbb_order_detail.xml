<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/module_cbb_mine_order_detail_top_fl"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/module_cbb_mine_order_detail_back_fl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/module_cbb_all_back_bg_w_wihte"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <TextView
                android:text="订单详情"
                android:textSize="@dimen/cbb_sp_18"
                android:textColor="@color/deepTextPrimary"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:id="@+id/module_cbb_mine_order_detail_top_service_fl"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="@dimen/cbb_sp_12"
                    android:textColor="@color/shallowTextPrimary"
                    android:layout_marginEnd="@dimen/cbb_dp_15"
                    android:layout_gravity="center_vertical"
                    android:text="联系客服"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </RelativeLayout>
    </FrameLayout>
    <android.support.v4.widget.NestedScrollView
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/module_cbb_mine_order_detail_top_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/assistPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@color/Primary"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/module_cbb_order_detail_over_icon"
                            android:layout_marginStart="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/module_cbb_mine_order_detail_top_title_tx"
                            android:textColor="@color/white"
                            android:textSize="@dimen/cbb_sp_18"
                            android:layout_marginStart="11dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="9dp"
                            android:layout_marginBottom="9dp"
                            android:text="订单已完成"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/module_cbb_mine_order_detail_mail_top_tx"
                        android:layout_marginStart="44dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="@dimen/cbb_sp_12"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/module_cbb_fff_3_bg"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginStart="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/module_cbb_all_location_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="18dp"
                            android:layout_marginTop="18dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/module_cbb_mine_order_detail_get_user_name_tx"
                                android:textSize="@dimen/cbb_sp_14"
                                android:textColor="@color/deepTextPrimary"
                                android:layout_marginBottom="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/module_cbb_mine_order_detail_get_user_address_tx"
                                android:layout_marginEnd="@dimen/cbb_dp_10"
                                android:textColor="@color/shallowTextPrimary"
                                android:textSize="@dimen/cbb_sp_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>




            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/module_cbb_order_detail_store_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/cbb_dp_15"
                    android:layout_marginEnd="@dimen/cbb_dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/module_cbb_order_cbb_logo_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/cbb_dp_0.5"
                android:background="@color/linePrimary"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <LinearLayout
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/module_cbb_mine_order_detail_goods_img"
                    android:layout_marginStart="@dimen/cbb_dp_15"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_marginEnd="@dimen/cbb_dp_15"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="@dimen/cbb_dp_15"
                    android:layout_marginBottom="@dimen/cbb_dp_15"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/module_cbb_mine_order_detail_goods_name_tx"
                        android:textSize="@dimen/cbb_sp_14"
                        android:textColor="@color/deepTextPrimary"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginBottom="11dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/module_cbb_mine_order_detail_goods_content_tx"
                        android:textColor="@color/shallowTextPrimary"
                        android:textSize="@dimen/cbb_sp_12"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cbb_dp_0.5"
                android:background="@color/linePrimary"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <LinearLayout
                android:gravity="end"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/module_cbb_mine_order_detail_goods_number_tx"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/secondaryTextPrimary"
                    android:textSize="@dimen/cbb_sp_12"
                    android:layout_marginEnd="@dimen/cbb_dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/module_cbb_mine_order_detail_goods_money_tx"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:layout_marginEnd="@dimen/cbb_dp_15"
                    android:textSize="16sp"
                    android:textColor="@color/Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/cbb_dp_10"
                android:background="@color/assistPrimary"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/module_cbb_mine_order_detail_mail_rl"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/module_cbb_mine_order_detail_mail_tx"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/deepTextPrimary"
                    android:textSize="@dimen/cbb_sp_14"
                    android:layout_marginStart="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_marginEnd="@dimen/cbb_dp_15"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="13dp"
                    android:background="@drawable/module_cbb_df1d01_3_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/cbb_sp_12"
                        android:text="复制单号"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cbb_dp_10"
                    android:background="@color/assistPrimary"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/module_cbb_order_detail_time_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/cbb_dp_10"
                android:background="@color/assistPrimary"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/module_cbb_order_detail_money_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/cbb_dp_10"
                android:background="@color/assistPrimary"/>
            <TextView
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="70dp" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/module_cbb_order_detail_submit_all_rl"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/module_cbb_order_detail_submit_two_rl"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/module_cbb_order_detail_submit_two_left_rl"
                android:layout_marginStart="@dimen/cbb_dp_15"
                android:layout_marginEnd="@dimen/cbb_dp_10"
                android:background="@drawable/module_cbb_df1f01_6_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/module_cbb_order_detail_submit_two_left_tx"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:textSize="@dimen/cbb_sp_16"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/module_cbb_order_detail_submit_two_right_rl"
                android:background="@drawable/module_cbb_df1f01_6_bg"
                android:layout_width="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/module_cbb_order_detail_submit_two_right_tx"
                    android:textSize="@dimen/cbb_sp_16"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/module_cbb_order_detail_submit_one_rl"
            android:background="@drawable/module_cbb_df1f01_6_bg"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="57dp"
            android:layout_marginEnd="57dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/module_cbb_order_detail_submit_one_tx"
                android:textSize="@dimen/cbb_sp_16"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>