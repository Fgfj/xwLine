<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/module_cbb_marketing_goods_list_item_img"
        android:layout_marginStart="@dimen/cbb_dp_15"
        android:layout_marginEnd="@dimen/cbb_dp_10"
        android:layout_gravity="center_vertical"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="27dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/module_cbb_marketing_goods_list_item_title_tx"
                android:textColor="@color/deepTextPrimary"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_marginEnd="28dp"
                android:textSize="@dimen/cbb_sp_14"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/module_cbb_marketing_goods_list_item_price_tx"
                android:textColor="@color/Primary"
                android:layout_marginEnd="@dimen/cbb_dp_15"
                android:textSize="@dimen/cbb_sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/module_cbb_marketing_goods_list_item_content_tx"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="26dp"
            android:textSize="@dimen/cbb_sp_12"
            android:textColor="@color/shallowTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@color/linePrimary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cbb_dp_0.5" />
    </LinearLayout>
</LinearLayout>