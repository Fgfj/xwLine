<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/module_nl_title_tx"
        android:text="司机端登录"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/cbb_sp_20"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_below="@+id/module_nl_title_tx"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="30dp"
                android:layout_gravity="center_vertical"
                android:text="手机号"
                android:textSize="@dimen/cbb_sp_18"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginEnd="30dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/module_nl_phone_et"
                    android:layout_gravity="center_vertical"
                    android:lines="1"
                    android:singleLine="true"
                    android:background="@null"
                    android:hint="请输入一维码编号"
                    android:maxLength="18"
                    android:textSize="@dimen/cbb_sp_18"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@color/linePrimary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="30dp"
                android:layout_gravity="center_vertical"
                android:text="  密码"
                android:textSize="@dimen/cbb_sp_18"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginEnd="30dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/module_nl_ps_et"
                    android:lines="1"
                    android:singleLine="true"
                    android:background="@null"
                    android:hint="请输入一维码编号"
                    android:maxLength="18"
                    android:textSize="@dimen/cbb_sp_18"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@color/linePrimary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/module_nl_login"
        android:background="#041341"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="登录"
            android:textSize="@dimen/cbb_sp_20"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>