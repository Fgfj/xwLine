<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/module_cbb_fff_6_bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/module_ct_5b83ff_6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_ticket_detail_name_tx"
            android:textSize="@dimen/cbb_sp_16"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="15dp"
            android:text="周瑞芳"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dialog_ticket_detail_id_card_tx"
            android:textSize="@dimen/cbb_sp_16"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"
            android:text="asdasdadsasd"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_ticket_detail_order_number_tx"
            android:layout_gravity="center_vertical"
            android:textColor="@color/secondaryTextPrimary"
            android:textSize="@dimen/cbb_sp_16"
            android:text="票号: 60998968"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/module_ct_check_tickets_time_icon"
                    android:layout_width="14dp"
                    android:layout_height="14dp" />
                <TextView
                    android:id="@+id/dialog_ticket_detail_time_tx"
                    android:textColor="@color/secondaryTextPrimary"
                    android:textSize="@dimen/cbb_sp_16"
                    android:layout_marginStart="13dp"
                    android:layout_gravity="center_vertical"
                    android:text="今天15:30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/module_ct_check_grenn_icon"
                    android:layout_width="4dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="4dp" />
                <TextView
                    android:id="@+id/dialog_ticket_detail_start_station_tx"
                    android:textColor="@color/secondaryTextPrimary"
                    android:textSize="@dimen/cbb_sp_16"
                    android:layout_marginStart="13dp"
                    android:layout_gravity="center_vertical"
                    android:text="郑州东站"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="4dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/module_ct_check_red_icon"
                    android:layout_height="4dp" />
                <TextView
                    android:id="@+id/dialog_ticket_detail_end_station_tx"
                    android:textColor="@color/secondaryTextPrimary"
                    android:textSize="@dimen/cbb_sp_16"
                    android:layout_marginStart="13dp"
                    android:layout_gravity="center_vertical"
                    android:text="西安"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="19dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_ticket_detail_seat_tx"
            android:textSize="@dimen/cbb_sp_14"
            android:textColor="@color/secondaryTextPrimary"
            android:layout_marginStart="15dp"
            android:text="座位号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dialog_ticket_detail_type_tx"
            android:textSize="@dimen/cbb_sp_14"
            android:textColor="@color/secondaryTextPrimary"
            android:layout_marginStart="15dp"
            android:text="成人票"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dialog_ticket_detail_money_tx"
            android:textSize="@dimen/cbb_sp_14"
            android:layout_marginEnd="15dp"
            android:textColor="@color/secondaryTextPrimary"
            android:text="46 "
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <RelativeLayout
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/dialog_ticket_detail_check_rl"
        android:background="@drawable/module_ct_041341_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:textColor="@color/white"
            android:textSize="@dimen/cbb_sp_16"
            android:text="混检"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>