<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/module_nl_start_staion_icon"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/his_item_start_tx"
            android:textColor="#3F3F3F"
            android:textStyle="bold"
            android:textSize="@dimen/cbb_sp_18"
            android:text="西安市"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/album_sp_14"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="至"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/his_item_end_tx"
            android:textColor="#3F3F3F"
            android:textStyle="bold"
            android:textSize="@dimen/cbb_sp_18"
            android:text="渭南市"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_marginStart="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/his_item_time_tx"
            android:text="2019-08-01"
            android:textSize="@dimen/cbb_sp_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/his_item_human_num_tx"
            android:layout_marginEnd="20dp"
            android:text="1人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="17dp"
        android:background="@color/linePrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>