<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/module_nl_user_item_type_tx"
            android:textSize="@dimen/cbb_sp_14"
            android:textColor="#3F3F3F "
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="9dp"
            android:text="未上车"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/module_nl_user_item_number_tx"
            android:textSize="@dimen/cbb_sp_14"
            android:textColor="#3F3F3F "
            android:textStyle="bold"
            android:text="2人"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/module_nl_user_item_station_tx"
            android:layout_marginEnd="15dp"
            android:textSize="@dimen/cbb_sp_14"
            android:textColor="#3F3F3F "
            android:textStyle="bold"
            android:text="到达接送点"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_marginBottom="9dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/module_nl_start_staion_icon"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <TextView
            android:id="@+id/module_nl_user_item_start_tx"
            android:textColor="#3F3F3F"
            android:text="西安市 · 北大街站点"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/module_nl_end_staion_icon"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <TextView
            android:id="@+id/module_nl_user_item_end_tx"
            android:textColor="#3F3F3F"
            android:text="渭南市 · 临渭区市中心医院"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="9dp"
        android:background="#DFDFDF"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
    <LinearLayout
        android:id="@+id/module_nl_user_item_phone_click_ly"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/module_nl_user_item_name_tx"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:textColor="#3F3F3F "
            android:textSize="@dimen/cbb_sp_12"
            android:layout_marginStart="20dp"
            android:text="你好"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_call_black_24dp"
            android:layout_width="21dp"
            android:layout_height="21dp" />
    </LinearLayout>
    <TextView
        android:background="#FAF8F8"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>