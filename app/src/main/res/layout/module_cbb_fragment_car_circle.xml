<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/module_cbb_car_circle_status_bar_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/module_cbb_car_circle_app_bar_ly"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/cbb_dp_15"
            android:layout_marginEnd="17.5dp"
            android:src="@drawable/default_user_icon"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <LinearLayout
            android:background="@drawable/module_cbb_f0eff4_14_bg"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/module_cbb_car_circle_serach_icon"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:hint="搜索你感兴趣的帖子"
                android:textSize="@dimen/cbb_sp_11"
                android:textColor="@color/shallowTextPrimary"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="7dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <ImageView
            android:src="@drawable/module_cbb_car_circle_add_icon"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cbb_dp_0.5"
        android:background="@color/linePrimary"/>
    <android.support.design.widget.TabLayout
        android:layout_marginStart="61dp"
        android:layout_marginEnd="61dp"
        android:id="@+id/module_cbb_car_circle_home_tl"
        android:layout_width="match_parent"
        android:layout_height="42.5dp">
        <!--app:tabTextAppearance="@style/circleTabLayoutStyle"-->
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/module_cbb_car_circle_home_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>