<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/assistPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/module_cbb_pay_order_back_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/module_cbb_all_back_bg_w_wihte" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="收银台"
                    android:textColor="@color/deepTextPrimary"
                    android:textSize="18sp" />

            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_marginStart="@dimen/cbb_dp_15"
            android:layout_marginEnd="@dimen/cbb_dp_15"
            android:layout_marginBottom="@dimen/cbb_dp_10"
            android:layout_marginTop="@dimen/cbb_dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginStart="11dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/module_cbb_pay_order_remind_icon"
                    android:layout_marginTop="@dimen/cbb_dp_10"
                    android:layout_marginBottom="18dp"
                    android:layout_width="95dp"
                    android:layout_height="16dp" />
                <TextView
                    android:text="需支付"
                    android:layout_marginBottom="@dimen/cbb_dp_10"
                    android:textSize="@dimen/cbb_sp_14"
                    android:textColor="@color/secondaryTextPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:text="¥ 77.00"
                android:textColor="@color/Primary"
                android:textSize="@dimen/cbb_sp_14"
                android:layout_marginEnd="19dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:layout_marginStart="@dimen/cbb_dp_15"
            android:layout_marginEnd="@dimen/cbb_dp_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="支付方式"
                android:layout_margin="10dp"
                android:textColor="@color/secondaryTextPrimary"
                android:textSize="@dimen/cbb_sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/cbb_dp_10"
                android:layout_marginEnd="@dimen/cbb_dp_10"
                android:layout_height="@dimen/cbb_dp_0.5"
                android:background="@color/linePrimary"/>
            <LinearLayout
                android:layout_marginStart="@dimen/cbb_dp_10"
                android:layout_marginEnd="@dimen/cbb_dp_10"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/module_cbb_pay_order_wechat_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="微信支付"
                    android:layout_marginStart="13dp"
                    android:textColor="@color/secondaryTextPrimary"
                    android:textSize="@dimen/cbb_sp_16"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/module_cbb_pay_order_choice_type_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:gravity="center"
                android:text="更多支付方式逐步上线中"
                android:layout_marginBottom="13dp"
                android:textSize="@dimen/cbb_sp_12"
                android:textColor="@color/shallowTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:background="#292933"
                android:layout_width="match_parent"
                android:layout_height="20dp">
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/module_cbb_pay_order_submit_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="57dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/module_cbb_df1f01_6_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:text="支付：¥77.00"
            android:textColor="@color/white"
            android:textSize="@dimen/cbb_sp_16" />
    </RelativeLayout>
</RelativeLayout>