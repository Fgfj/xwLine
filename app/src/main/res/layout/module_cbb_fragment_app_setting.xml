<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/module_cbb_mine_setting_toolbar_fl"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/module_cbb_mine_setting_list_back_fl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/module_cbb_all_back_bg_w_wihte"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <TextView
                android:text="系统设置"
                android:textSize="@dimen/cbb_sp_18"
                android:textColor="@color/deepTextPrimary"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_below="@+id/module_cbb_mine_setting_toolbar_fl"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/cbb_dp_0.5"
            android:background="@color/linePrimary"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"
                android:textColor="@color/deepTextPrimary"
                android:text="推送"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <com.xacheliangroup.check.common.view.SwitchButton
                android:id="@+id/module_cbb_mine_setting_sw"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SwitchSetting"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                app:kswThumbMargin="1dp"  />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@color/assistPrimary"/>
        <LinearLayout
            android:id="@+id/module_cbb_mine_setting_version_ly"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"
                android:textColor="@color/deepTextPrimary"
                android:text="当前版本"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/module_cbb_mine_setting_version_tx"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="15dp"
                android:textSize="14sp"
                android:textColor="@color/shallowTextPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/cbb_dp_0.5"
            android:background="@color/linePrimary"/>
        <LinearLayout
            android:id="@+id/module_cbb_mine_setting_about_us_ly"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"
                android:textColor="@color/deepTextPrimary"
                android:text="关于我们"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/cbb_dp_0.5"
            android:background="@color/linePrimary"/>
        <LinearLayout
            android:id="@+id/module_cbb_mine_setting_service_ly"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"
                android:textColor="@color/deepTextPrimary"
                android:text="服务协议"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/cbb_dp_0.5"
            android:background="@color/linePrimary"/>
        <LinearLayout
            android:id="@+id/module_cbb_mine_setting_clear_size_ly"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"
                android:textColor="@color/deepTextPrimary"
                android:text="清除缓存"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/module_cbb_mine_setting_clear_size_tx"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="15dp"
                android:textSize="14sp"
                android:textColor="@color/shallowTextPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/cbb_dp_0.5"
            android:background="@color/linePrimary"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/module_cbb_mine_setting_logout_ry"
        android:layout_alignParentBottom="true"
        android:background="@drawable/module_cbb_df1f01_6_bg"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="27dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="退出登录"
            android:textSize="@dimen/cbb_sp_16"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>