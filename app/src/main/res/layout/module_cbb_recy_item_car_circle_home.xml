<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    card_view:cardBackgroundColor="@color/white"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="3dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4.5dp"
    android:layout_marginEnd="4.5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="3dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/module_cbb_car_circle_item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="8.5dp"
            android:textColor="@color/deepTextPrimary"
            android:textSize="@dimen/cbb_sp_12"
            android:layout_marginStart="7.5dp"
            android:layout_marginEnd="16.5dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/module_cbb_car_circle_item_title_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12.5dp"
            android:layout_marginEnd="11dp"
            android:layout_marginStart="7.5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/module_cbb_car_circle_user_img"
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/module_cbb_car_circle_user_name_tx"
                android:layout_marginStart="4.5dp"
                android:layout_marginEnd="5.5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/cbb_sp_10"
                android:textColor="@color/secondaryTextPrimary"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/module_cbb_car_circle_add_thumb_img"
                android:layout_marginEnd="3.5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/module_cbb_car_circle_add_thumb_tx"
                android:textSize="@dimen/cbb_sp_12"
                android:textColor="@color/secondaryTextPrimary"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>